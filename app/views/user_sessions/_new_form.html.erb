<% form_for :user_session, @user_session, :url => user_session_path do |f| %>
  <div class="field">
    <%= f.label :login, "Username" %>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="cb_login"><%= f.check_box :remember_me %><%= f.label :remember_me %></div>
  <div class="login_cmds">
    <%= f.submit "Sign in", :class => "signin_button" %>
    <%= link_to "Register", new_account_path %>
  </div>
<% end %>